# -*- snakemake -*-
import os
from mako.template import Template
from snakemakelib.config import update_sml_config, sml_rules_path, get_sml_config

# Start by including the general snakefile
include: os.path.join(sml_rules_path(), 'bio/ngs', 'settings.rules')
include: os.path.join(sml_rules_path(), 'bio/ngs/reports', 'settings.rules')

rule_report = Template(filename=os.path.join(sml_rules_path(), 'bio/ngs/reports', 'rulegraphs.mako'))

config_default = {
    'bio.ngs.reports.rulegraphs' : {
        'rulegraphs' : [],
    },
}

cfg = get_sml_config()

report_cfg = get_sml_config('bio.ngs.reports.settings')

rule report_rulegraphs:
    """Generate rulegraphs for targets specified by cfg['bio.ngs.reports.rulegraphs']['rulegraphs']"""
    input: [os.path.join(report_cfg['reportdir'], x) for x in cfg['bio.ngs.reports.rulegraphs']['rulegraphs']]
    output: os.path.join(report_cfg['reportdir'], "rules.html")
    run:
      kw = {
          'project_name' : report_cfg['project_name'],
          'application' : report_cfg['application'],
          'rulegraphs' : [x for x in cfg['bio.ngs.reports.rulegraphs']['rulegraphs']],
      }
      d = {}
      d.update([(x,os.path.join(report_cfg['reportdir'], x)) for x in cfg['bio.ngs.reports.rulegraphs']['rulegraphs']])
      s = rule_report.render(**kw)
      report(s, str(output), **d)
      
rule sample_dag:
    """Utility rule to generate dag for first sample in sample list"""
    input: "{prefix}", cfg['bio.ngs.settings']['samples'][0]
    output: "{prefix}_dag.png"
    shell: "snakemake  --dag {input[0]} --config samples=\"['{input[1]}']\" | dot -Tpng -o {output}"

rule rulegraph:
    """Generate rulegraph for a specific rule"""
    input: "{prefix}"
    output: "{prefix}.png"
    shell: "snakemake --rulegraph {input} | dot -Tpng -o {output}"

ruleorder: rulegraph > sample_dag
