# -*- snakemake -*-
import os

try:
    from snakemakelib.bio.ngs.db import index
    from snakemakelib.stat import is_installed
except:
    pass

include: '../settings.rules'

DEFAULT_RULES = ['bwa_mem', 'bwa_index']

config_default = {
    'bio.ngs.align.bwa' : {
        'cmd' : "bwa",
        'ref' : config['bio.ngs.settings']['db']['ref'],
        'index' : "",
        'index_ext' : ['.amb', '.ann', '.bwt', '.pac', '.sa'],
        'threads' : config['bio.ngs.settings']['threads'],
        'options' : "-M",
        'rules' : DEFAULT_RULES,
    },
}

configdefault: config_default

try:
    # Update index
    config['bio.ngs.align.bwa']['index'] = index(
        ref = config['bio.ngs.settings']['db']['ref'],
        index = config['bio.ngs.align.bwa']['index'],
        application = 'bwa',
        build = config['bio.ngs.settings']['db']['build'])
except:
    pass

try:
    if not is_installed(config['bio.ngs.align.bwa']['cmd']):
        raise Exception("\nbio.ngs.align.bwa: {prog} not installed or not in PATH\n".format(prog=config['bio.ngs.align.bwa']['cmd']))
except:
    pass

for rule in config['bio.ngs.align.bwa']['rules']:
    include: os.path.join("bwa", rule + ".rule")
