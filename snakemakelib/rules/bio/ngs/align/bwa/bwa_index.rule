# -*- snakemake -*-

include: 'bwa.rules'

rule bwa_index:
    """bwa index a reference"""
    params: cmd = bwa_cfg['cmd']
    input: indexref = bwa_cfg['index']
    output: expand("{{prefix}}{{ext}}{bwaext}", bwaext=bwa_cfg['index_ext'])
    shell: "{params.cmd} index {input.indexref} {wildcards.prefix}"
