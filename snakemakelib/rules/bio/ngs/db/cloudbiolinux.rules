# -*- snakemake -*-
#
import os
from snakemakelib.config import update_config

include: "../settings.rules"

DEFAULT_RULES = ['cloudbiolinux_update_annotation_gtf']

config_default = {
    'bio.ngs.db.cloudbiolinux' : { 
        'ref' : config['bio.ngs.settings']['db']['ref'],
        'rules': DEFAULT_RULES,
      },
}

config = update_config(config_default, config)

for rule in config['bio.ngs.db.cloudbiolinux']['rules']:
    include: os.path.join("cloudbiolinux", rule + ".rule")
