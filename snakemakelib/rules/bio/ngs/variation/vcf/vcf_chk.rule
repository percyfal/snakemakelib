# -*- snakemake -*-
config_default = {
    'bio.ngs.variation.vcf' : {
        'chk' : {
            'options' : "",
        },
    },
}

config = update_config(config_default, config)

rule vcf_chk:
    """vcf: Run vcf check on vcf file"""
    params: cmd=config['bio.ngs.variation.vcf']['cmd']
    input: "{prefix}.vcf"
    output: "{prefix}.chk"
    shell: "{params.cmd} check {input} > {output}"
